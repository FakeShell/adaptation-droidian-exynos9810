[Unit]
Description=Use audio hidl compat layer
Before=user@32011.service
After=lxc@android.service
Requires=lxc@android.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/usr/bin/waitforservice init.svc.miniaf
ExecStart=mount -o bind /usr/lib/droid-system-overlay/etc/init/init.disabled.rc /var/lib/lxc/android/rootfs/system/etc/init/init.disabled.rc
ExecStartPost=mount -o bind /system/lib64/hw/audio.hidl_compat.default.so /vendor/lib64/hw/audio.primary.default.so

[Install]
WantedBy=graphical.target
